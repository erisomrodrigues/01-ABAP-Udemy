REPORT ZDCHECKBOX.

PARAMETERS: P_D1 TYPE I OBLIGATORY,
            P_D2 TYPE I OBLIGATORY,
            P_CB1 AS CHECKBOX,
            P_CB2 AS CHECKBOX,
            P_CB3 AS CHECKBOX,
            P_CB4 AS CHECKBOX DEFAULT 'X'.

DATA: LV_V1 TYPE I.

IF P_CB1 = 'X'.
  LV_V1 = P_D1 + P_D2.
  WRITE:/ 'SUM RESULT IS --> ',LV_V1.
ENDIF.

IF P_CB2 = 'X'.
  LV_V1 = P_D1 - P_D2.
  WRITE:/ 'SUBSTRACTION RESULT IS --> ',LV_V1.
ENDIF.

IF P_CB3 = 'X'.
  LV_V1 = P_D1 * P_D2.
  WRITE:/ 'PRODUCT RESULT IS --> ',LV_V1.
ENDIF.

IF P_CB4 = 'X'.
  LV_V1 = P_D1 / P_D2.
  WRITE:/ 'DIVISION RESULT IS --> ',LV_V1.
ENDIF.
