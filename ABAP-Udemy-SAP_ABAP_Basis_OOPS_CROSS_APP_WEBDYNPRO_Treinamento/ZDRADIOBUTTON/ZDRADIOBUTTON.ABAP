REPORT ZDRADIOBUTTON.

PARAMETERS: P_D1 TYPE I OBLIGATORY,
            P_D2 TYPE I OBLIGATORY,
            R_RB1 RADIOBUTTON GROUP G1,
            R_RB2 RADIOBUTTON GROUP G1,
            R_RB3 RADIOBUTTON GROUP G1,
            R_RB4 RADIOBUTTON GROUP G1,
            R_RB5 RADIOBUTTON GROUP G1 DEFAULT 'X'.

DATA: LV_V1 TYPE I.

IF R_RB1 = 'X'.
  LV_V1 = P_D1 + P_D2.
  WRITE:/ 'SUM RESULT IS -->',LV_V1.
ELSEIF R_RB2 = 'X'.
  LV_V1 = P_D1 - P_D2.
  WRITE:/ 'SUBTRACTION RESULT IS -->',LV_V1.
ELSEIF R_RB2 = 'X'.
  LV_V1 = P_D1 * P_D2.
  WRITE:/ 'PRODUCT RESULT IS -->',LV_V1.
ELSEIF R_RB2 = 'X'.
  LV_V1 = P_D1 / P_D2.
  WRITE:/ 'DEISION RESULT IS -->',LV_V1.
ELSE.
  MESSAGE 'PLESE SELECT ANY RADIO BUTTON FROM ABOVE MENTIONED 4 RADIO BUTTONS' TYPE 'I'.
ENDIF.
