REPORT ZD101B.

PARAMETERS: PR_D1 TYPE I OBLIGATORY,
            PR_D2 TYPE I OBLIGATORY,
            PR_D3 TYPE STRING OBLIGATORY.

DATA: LV_D1 TYPE I.

CASE PR_D3.
  WHEN 'SUM'.
    LV_D1 = PR_D1 + PR_D2.
    MESSAGE | 'SUM RESULT IS { LV_D1 }| TYPE 'I'.

  WHEN 'MINUS'.
    LV_D1 = PR_D1 - PR_D2.
    MESSAGE | 'SUBTRACTION RESULT IS { LV_D1 } | TYPE 'I'.

  WHEN 'PRODUCT'.
    LV_D1 = PR_D1 * PR_D2.
    MESSAGE | 'PRODUCT RESULT IS { LV_D1 }| TYPE 'I'.

  WHEN OTHERS.
    LV_D1 = PR_D1 / PR_D2.
    MESSAGE | 'DIVISION RESULT IS { LV_D1 } | TYPE 'I'.

ENDCASE.
